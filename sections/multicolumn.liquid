{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  #shopify-section-{{ section.id }} {
    border-top: {{ section.settings.border_top_thickness }}px solid rgba(0, 0, 0, {{ section.settings.border_top_opacity }}%);
    border-bottom: {{ section.settings.border_bottom_thickness }}px solid rgba(0, 0, 0, {{ section.settings.border_bottom_opacity }}%);
  }
  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign columns_tablet_int = section.settings.columns_tablet | plus: 0
  assign show_tablet_slider = false
  if section.settings.swipe_on_tablet and section.blocks.size > columns_tablet_int
    assign show_tablet_slider = true
  endif
-%}

<div class="multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %} {{ section.settings.mod_class }}">
  <div class="{% if section.settings.layout == 'grid' %} page-width{% else %} multicolumn-fullwidth {% endif %} section-{{ section.id }}-padding isolate">

    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper title-wrapper--no-top-margin title-wrapper-{{ section.settings.title_style }} {% if section.settings.full_width == false and section.settings.title_style != "03" %} page-width{% endif %}{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% endif %}{% if show_desktop_slider %} collection__title--desktop-slider{% endif %}">
        <div class="inner">
          {%- if section.settings.title_decor != blank -%}
            <img
              class="title_decor"
              srcset= "{{ section.settings.title_decor | image_url: width: 80 }}"
              src="{{ section.settings.title_decor | image_url: width: 80 }}"
              alt="{{ section.settings.title_decor.alt | escape }}"
              loading="lazy"
              width="{{ section.settings.title_decor.width }}"
              height="{{ section.settings.title_decor.height }}"
            >
          {%- endif -%}
          {%- if section.settings.description != blank -%}
            <div class="{{ section.settings.description_style }}">
                {{ section.settings.description }}
            </div>
          {%- endif -%}
          
          {%- if section.settings.title != blank -%}
            <h2 class="title {{ section.settings.heading_size }}">
              {% if section.settings.title_style == "03" %}
              <div class="marquee-group">
                <div class="marquee">
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span> 
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                </div>
                <div class="marqueee">
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span> 
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                  <span>{{ section.settings.title | escape }}</span>
                </div>
              </div>
              {% else %}
                {{ section.settings.title | escape }}
              {% endif %}
            </h2>
          {%- endif -%}
        </div>
      </div>
    {%- endunless -%}
    <slider-component class="slider-mobile-gutter slider-tablet-gutter">
      <ul class="multicolumn-list contains-content-container grid {% if section.settings.layout == 'grid--gapless' %} grid--gapless{% endif %} grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_tablet }}-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %} {% if show_tablet_slider %} slider slider--tablet grid--peek{% endif %} align-items-{{ section.settings.row_alignment }}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {%- assign empty_column = '' -%}
          {%- if block.settings.image == blank and block.settings.title == blank and block.settings.text == blank and block.settings.link_label == blank -%}
            {%- assign empty_column = ' multicolumn-list__item--empty' -%}
          {%- endif -%}

          <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile or section.settings.swipe_on_tablet %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}" {{ block.shopify_attributes }}>            
            <div class="multicolumn-card content-container" 
              {%- if block.settings.padding_left or block.settings.padding_right -%}
                style="{%- if block.settings.padding_left -%}padding-left: {{ block.settings.padding_left }}px;{%- endif -%} {%- if block.settings.padding_right -%}padding-right: {{ block.settings.padding_right }}px;{%- endif -%} {%- if block.settings.padding_top -%}padding-top: {{ block.settings.padding_top }}px;{%- endif -%} {%- if block.settings.padding_bottom -%}padding-bottom: {{ block.settings.padding_bottom }}px{%- endif -%}"
              {%- endif -%}
            >
              {%- if block.settings.image != blank and block.settings.image_position == "top" -%}
                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                  <div class="media media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                    {% endif %}>
                    <img
                      class="multicolumn-card__image"
                      srcset="{%- if block.settings.image.width >= 275 -%}{{ block.settings.image | image_url: width: 275 }} 275w,{%- endif -%}
                        {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
                        {%- if block.settings.image.width >= 710 -%}{{ block.settings.image | image_url: width: 710 }} 710w,{%- endif -%}
                        {%- if block.settings.image.width >= 1420 -%}{{ block.settings.image | image_url: width: 1420 }} 1420w,{%- endif -%}
                        {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                      src="{{ block.settings.image | image_url: width: 550 }}"
                      sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                        (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                        calc(100vw - 30px)"
                      alt="{{ block.settings.image.alt }}"
                      height="{{ block.settings.image.height }}"
                      width="{{ block.settings.image.width }}"
                      loading="lazy"
                    >
                  </div>
                </div>
              {%- endif -%}
              
              {%- if block.settings.icon != 'none' or block.settings.text != blank or block.settings.title != blank or block.settings.link_label != blank -%}
              <div class="multicolumn-card__info" 
                {%- if block.settings.image_spacing and block.settings.image_position == "top" -%}
                style="padding-top: {{ block.settings.image_spacing }}px;"
                {%- endif -%}
                {%- if block.settings.image_spacing and block.settings.image_position == "bottom" -%}
                style="padding-bottom: {{ block.settings.image_spacing }}px;"
                {%- endif -%}
              >
                {%- if block.settings.icon != 'none' -%}
                <div class="multicolumn-card-title-wrap {{ block.settings.icon_position }}">
                  {% render 'icon-accordion', icon: block.settings.icon %}
                  <div class="multicolumn-card-title-content-wrap">
                {%- endif -%}

                  {%- if block.settings.meta != blank -%}
                    <div class="article-card__info meta">{{ block.settings.meta | escape }}</div>
                  {%- endif -%}

                  {%- if block.settings.title != blank -%}
                    <h3 class="{{ block.settings.title_size }}"><a class="link hightlight-link link--text" href="{{ block.settings.link }}">{{ block.settings.title | escape }}</a></h3>
                  {%- endif -%}
                  
                  {%- if block.settings.text != blank -%}
                    <div class="rte">{{ block.settings.text | truncatewords: 25 }}</div>
                  {%- endif -%}

                  {%- if block.settings.link_label != blank -%}
                    <a class="{% if block.settings.link_style == 'link' %}link animate-arrow hightlight-link link--text{% elsif block.settings.link_style == 'solid' %}button{% else %}button button--secondary{% endif %}" {% if block.settings.link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.link }}"{% endif %}>{{ block.settings.link_label | escape }}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span></a>
                  {%- endif -%}
                {%- if block.settings.icon != 'none' -%}
                  </div>
                </div>
                {%- endif -%}
              </div>
              {%- endif -%}

              {%- if block.settings.image != blank and block.settings.image_position == "bottom" -%}
                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                  <div class="media media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                    {% endif %}>
                    <img
                      class="multicolumn-card__image"
                      srcset="{%- if block.settings.image.width >= 275 -%}{{ block.settings.image | image_url: width: 275 }} 275w,{%- endif -%}
                        {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
                        {%- if block.settings.image.width >= 710 -%}{{ block.settings.image | image_url: width: 710 }} 710w,{%- endif -%}
                        {%- if block.settings.image.width >= 1420 -%}{{ block.settings.image | image_url: width: 1420 }} 1420w,{%- endif -%}
                        {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                      src="{{ block.settings.image | image_url: width: 550 }}"
                      sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                        (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                        calc(100vw - 30px)"
                      alt="{{ block.settings.image.alt }}"
                      height="{{ block.settings.image.height }}"
                      width="{{ block.settings.image.width }}"
                      loading="lazy"
                    >
                  </div>
                </div>
              {%- endif -%}
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider or show_tablet_slider -%}
        <div class="slider-buttons no-js-hidden">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-chevron-left' %}</button>
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-chevron-left' %}</button>
        </div>
      {%- endif -%}
    </slider-component>
    <div class="center{% if show_mobile_slider or show_tablet_slider %} small-hide medium-hide{% endif %}">
      {%- if section.settings.button_label != blank -%}
        <a class="button button--primary"{% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %}>
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

